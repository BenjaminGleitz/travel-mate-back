{% extends 'base.html.twig' %}

{% block title %}
	Détais du profil de - Travel Mate
{% endblock %}

{% block body %}
	<div class="container table-responsive">
		<h1>Détails de l'utilisateur</h1>
		<div class="action-list">
			<div class="edit-delete-group">
					<button type="button" class="btn btn-outline-primary mb-4">
						<a href="{{ path('backoffice_user_edit', {'id': user.id}) }}">Modifier</a>
					</button>
				{{ include('backoffice/user/_delete_form.html.twig') }}
			</div>
			<button type="button" class="btn btn-outline-secondary mb-4">
				<a href="{{ path('backoffice_user_index') }}">Retour à la liste des utilisateurs</a>
			</button>
		</div>


	<table class="table table-striped table-bordered align-middle">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ user.nickname }}</td>
			</tr>
			<tr>
				<th>Age</th>
				<td>{{ user.age }}</td>
			</tr>
			<tr>
				<th>Nationality</th>
				<td>{{ user.nationality }}</td>
			</tr>
			<tr>
				<th>Language</th>
				<td>{{ user.language }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	
{% endblock %}

