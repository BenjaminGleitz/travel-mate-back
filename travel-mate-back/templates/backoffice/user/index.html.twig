{% extends 'base.html.twig' %}

{% block title %}
	Utilisateurs
{% endblock %}

{% block body %}
	<div class="container table-responsive">
		<h1>Liste des utilisateurs</h1>

		<button type="button" class="btn btn-outline-secondary mb-4">
			<a class="text-decoration-none" href="{{ path('backoffice_user_new') }}">Ajouter un utilisateur</a>
		</button>

		<table class="table table-striped table-bordered align-middle">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th class="email-table">Roles</th>
					<th>Nom de famille</th>
					<th>Prénom(s)</th>
					<th>Pseudo</th>
					<th>Age</th>
					<th>Nationalité</th>
					<th>Langues parlées</th>
					<th>Créé(e) le</th>
					<th>Mis(e) à jour le</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td class="email-table">{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.nickname }}</td>
						<td>{{ user.age }}</td>
						<td>{{ user.nationality }}</td>
						<td>{{ user.language }}</td>
						<td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
						<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d') : '' }}</td>
						<td>
							<button type="button" class="btn btn-outline-info">
								<a href="{{ path('backoffice_user_show', {'id': user.id}) }}">voir</a>
							</button>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

