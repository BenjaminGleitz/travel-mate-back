{% extends 'base.html.twig' %}

{% block title %}Événements - Travel Mate
{% endblock %}

{% block body %}

	{% if app.user %}
		bienvenue {{app.user.firstname}}
	{% endif %}
	
		
	<div class="container table-responsive">
		<h1>Liste des événements</h1>
		
		<button type="button" class="btn btn-outline-secondary mb-4">
			<a class="text-decoration-none" href="{{ path('backoffice_event_new') }}">Ajouter un événement</a>
		</button>
		<table class="table table-striped table-bordered align-middle">
			<thead>
				<tr>
					<th>Id</th>
					<th>City ID</th>
					<th>Creator ID</th>
					<th>Nom de l'événement</th>
					<th>Description</th>
					<th>Nombre de participants</th>
					<th>Date de début</th>
					<th>Statut</th>
					<th>Créé le</th>
					<th>Mis à jour le</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			
				{% for event in events %}
					<tr>
						<td>{{ event.id }}</td>
						<td>{{ event.city.name}}</td>
						<td>{{ event.creator.firstname }} {{event.creator.lastname}}</td>
						<td>{{ event.title }}</td>
						<td class="description_th">{{ event.content }}</td>
						<td>{{ event.participant }}</td>
						<td>{{ event.startAt | date('y-m-d') }}</td>
						<td>{{ event.status }}</td>
						<td>{{ event.createdAt | date('y-m-d') }}</td>
						<td>{{ event.updatedAt | date('y-m-d') }}</td>
						<td>
						<button type="button" class="btn btn-outline-info">
							<a href="{{ path('backoffice_event_show', {'id': event.id}) }}">Voir</a>
						</button>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}